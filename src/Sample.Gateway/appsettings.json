{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Gateway": {
    "Authentication": {
      "Authority": "http://localhost:8080/auth/realms/Flight42",
      "ClientId": "gateways-adminapi",
      "Scopes": [ "openid", "profile", "email", "offline_access" ],
      "SessionTimeoutInMin": 1,
      "UniqueIdentifierClaimType": "preferred_username"
    },
    "Routing": {
      "ResourceProxy": "http://localhost:5100",
      "Routes": {
        "FlightManagement": {
          "BaseUrl": "http://localhost:5000",
          "PathMatch": "api/flight-management/{**path}"
        },
        "FlightShopping": {
          "BaseUrl": "http://localhost:5001",
          "PathMatch": "api/flight-shopping/{**path}"
        },
        "LegacyApp": {
          "BaseUrl": "http://localhost:4300",
          "PathMatch": "Sample.LegacyApp/{**path}"
        },
        "Frontend": {
          "PathMatch": "{**path}",
          "BaseUrl": "http://localhost:4200"
        }
      }
    }
  }
}
