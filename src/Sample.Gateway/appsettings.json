{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Gateway": {
    "Authentication": {
      "Authority": "https://login.microsoftonline.com/01646a6a-a4b1-456a-91fc-c3c740776968/",
      "ClientId": "8f657970-f27c-4842-9ea9-3bdd4446e132",
      "AuthorizationCodeScopes": "openid offline_access",
      "SessionTimeoutInMin": 1,
      "UniqueIdentifierClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress"
    },
    "Routing": {
      "ResourceProxy": "http://localhost:5100",
      "Routes": {
        "FlightManagement": {
          "BaseUrl": "http://localhost:5000",
          "PathMatch": "api/flight-management/{**path}",
          "EnforceAuthentication": false
        },
        "FlightShopping": {
          "BaseUrl": "http://localhost:5001",
          "PathMatch": "api/flight-shopping/{**path}",
          "EnforceAuthentication": false
        },
        "LegacyApp": {
          "BaseUrl": "http://localhost:4300",
          "PathMatch": "Sample.LegacyApp/{**path}",
          "EnforceAuthentication": false
        },
        "Frontend": {
          "BaseUrl": "http://localhost:4200",
          "PathMatch": "{**path}",
          "EnforceAuthentication": true
        }
      }
    }
  }
}
